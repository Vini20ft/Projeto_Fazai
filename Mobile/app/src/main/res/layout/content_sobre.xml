<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fazai.com.br.fazai.activities.SobreActivity"
    tools:showIn="@layout/activity_sobre">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars = "vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

            <TextView
                    android:id="@+id/faculdade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faculdade"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/unibratec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unibratec"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/banca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/banca"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/alessandro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alessandro"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/luna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/luna"
                    android:textColor="@color/cardview_dark_background"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/flavius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flavius"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/fernando"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fernando"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/equipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/equipe"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:id="@+id/caio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/caio"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/danilo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/danilo"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/leomir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/leomir"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/misael"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/misael"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/ricardo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ricardo"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/samy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/samy"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/thiago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thiago"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/tiago_aschoff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tiago_aschoff"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/vinicius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vinicius"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
