<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fazai.com.br.fazai.activities.ConfiguracoesActivity">


    <ImageButton
        android:id="@+id/imageBrazil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        app:srcCompat="@drawable/brazil"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="207dp" />

    <ImageButton
        android:id="@+id/imageEua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eua"
        android:layout_marginLeft="98dp"
        android:layout_alignTop="@+id/imageBrazil"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageSpain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageEua"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        app:srcCompat="@drawable/spain" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o idioma desejado"
        android:textSize="20dp"
        android:layout_above="@+id/imageEua"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />
</RelativeLayout>
